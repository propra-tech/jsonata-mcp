{
  "name": "@propra/jsonata-mcp",
  "version": "0.1.0",
  "description": "JSONata Model Context Protocol (MCP) implementation",
  "main": "src/index.ts",
  "type": "module",
  "bin": "./bin/jsonata-mcp.js",
  "scripts": {
    "test": "node --no-warnings --experimental-transform-types --test --test-reporter=spec \"**/*.spec.ts\"",
    "start": "node --no-warnings --experimental-transform-types src/index.ts",
    "check-types": "tsc",
    "build": "tsup"
  },
  "keywords": [
    "mcp",
    "jsonata",
    "model context protocol"
  ],
  "author": "Propra Technologies, Inc.",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "jsonata": "^2.0.6",
    "zod": "^3.24.3"
  },
  "packageManager": "pnpm@9.2.0",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ]
  }
}
